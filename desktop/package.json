{
  "name": "edi-cli-desktop",
  "version": "0.4.0",
  "description": "Postman for EDI - Desktop application for EDI file parsing, validation, and analysis",
  "main": "src/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "electron src/main.js",
    "start": "electron src/main.js",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "test": "jest"
  },
  "keywords": [
    "edi",
    "x12",
    "healthcare",
    "parsing",
    "validation",
    "electron",
    "desktop"
  ],
  "author": "edi-cli contributors",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "monaco-editor": "^0.45.0",
    "split.js": "^1.6.5"
  },
  "build": {
    "appId": "com.edicli.desktop",
    "productName": "EDI CLI Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!src/**/*.test.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    },
    "win": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "linux": {
      "target": "AppImage",
      "arch": ["x64"]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/edi-cli.git"
  }
}